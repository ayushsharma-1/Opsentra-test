# OpSentra Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# CLOUD SERVICES CONFIGURATION
# =============================================================================

# CloudAMQP RabbitMQ Connection
CLOUDAMQP_URL=amqps://your-username:your-password@your-host.rmq2.cloudamqp.com/your-vhost

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/opsentra?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/opsentra?retryWrites=true&w=majority
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/opsentra?retryWrites=true&w=majority

# AWS S3 Configuration (ap-south-1 region)
AWS_S3_REGION=ap-south-1
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_PREFIX=opsentra-
S3_BUCKET_NAME=opsentra-logs-archive

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# GROQ API Configuration
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.1-8b-instant

# Google Gemini API Configuration
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_MODEL=gemini-1.5-flash

# =============================================================================
# SERVICE PORTS CONFIGURATION
# =============================================================================

# Frontend Service
FRONTEND_PORT=5050
PORT=5050

# Backend Node.js Service
NODE_BACKEND_PORT=5051

# AI Backend Service
AI_BACKEND_PORT=5052

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Service Configuration
SERVICE_NAME=opsentra-backend-node
NODE_ENV=production
LOG_LEVEL=info

# Message Processing Configuration
LOG_BATCH_SIZE=100
ERROR_BATCH_SIZE=50
ARCHIVE_THRESHOLD_MB=10
ARCHIVE_INTERVAL_MINUTES=60
ARCHIVE_BATCH_INTERVAL_SECONDS=300

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30

# Optional: Instance metadata for S3 bucket naming
INSTANCE_IP=auto-detect

# Log Level Configuration
LOG_LEVEL=info

# Batch Processing Configuration
BATCH_INTERVAL_MINUTES=10
BATCH_SIZE=10000

# AI Processing Configuration
AI_ERROR_PATTERNS="ERROR|Traceback|HTTP [45]\\d\\d|latency > \\d+ms|Failed|Exception"